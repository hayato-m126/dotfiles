root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[.go]
indent_style = tab

[.rs]
# https://users.rust-lang.org/t/what-do-you-think-about-two-space-indenting/51455/3
indent_size = 4

[Makefile]
indent_style = tab

[*.sh]
indent_size = 4

[*.bat]
end_of_line = crlf